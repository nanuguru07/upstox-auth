<head>
  <title>Upstox Redirect | Powered by Nanu Guru</title>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <script>
    // Wait for page to fully load
    window.onload = function() {
      const params = window.location.search;
      
      // Check if we have a code parameter (from Upstox)
      const urlParams = new URLSearchParams(params);
      const code = urlParams.get('code');
      
      if (code) {
        // ‚úÖ FIXED: Add https:// before the URL
        // This ensures it works on all browsers/devices
        const appUrl = "https://tradingalert://auth" + params;
        
        console.log("Redirecting to app with code:", code.substring(0, 10) + "...");
        
        // First try to open the app
        window.location.href = appUrl;
        
        // Fallback: If app doesn't open within 2 seconds, show instructions
        setTimeout(function() {
          document.getElementById('fallback').style.display = 'block';
        }, 2000);
        
      } else {
        document.getElementById('status').textContent = "No authorization code received.";
        document.getElementById('status').style.color = "red";
      }
    };
  </script>
  <style>
